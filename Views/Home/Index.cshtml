@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Star Admin2</title>
    <!-- plugins:css -->
    <link rel="manifest" href="~/manifest.json">
    <link rel="stylesheet" href="~/assets/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/assets/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/img/favicon.png" />
    <script src="~/js/register-sw.js"></script> <!-- Aquí llamamos al registro -->

</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo text-center d-flex justify-content-center">
                                <img src="~/img/icono.png" alt="logo" class="mb-3">
                            </div>
                            <h4 class="text-center">Iniciar Sesión</h4>
                            <h6 class="text-center">Ingresa Tus Datos</h6>

                            <form class="pt-3" method="post" action="@Url.Action("Login", "Home")">
                                <div class="form-group">
                                    <input type="email" name="Correo" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="LaPoderosa" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password" required>
                                </div>
                                <div class="mt-3 d-grid gap-2">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg fw-medium auth-form-btn">SIGN IN</button>
                                </div>
                                                                                          
                            </form>

                              <!-- Botón de inicio con Google -->
                                <div class="mb-2 d-grid gap-2 mt-4">
                                    <a asp-controller="Admin" asp-action="LoginGoogle" class="btn btn-block btn-danger auth-form-btn">
                                        <i class="fa fa-google me-2"></i> Connect using Google
                                    </a>
                                </div>

                                <div class="text-center mt-4 fw-light">
                                    Don't have an account? <a href="@Url.Action("Registrar","Home" )" class="text-primary">Create</a>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/template.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/todolist.js"></script>

    <!-- endinject -->
</body>
</html>
