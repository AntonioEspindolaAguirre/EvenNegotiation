@model EventNegotiation.Models.Usuarios;

@{
    Layout = null;
    ViewData["Title"] = "Crear Usuario";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Star Admin2 - Crear Usuario</title>
    <link rel="manifest" href="~/manifest.json">
    <link rel="stylesheet" href="~/assets/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/assets/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="shortcut icon" href="~/assets/images/favicon.png" />
    <link rel="manifest" href="/manifest.json">
    <script src="~/js/register-sw.js"></script> <!-- Aquí llamamos al registro -->



</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo text-center d-flex justify-content-center">
                                <img src="~/img/icono.png" alt="logo" class="mb-3">
                            </div>
                            <h6 class="fw-light">Por favor, complete los siguientes campos para crear tu usuario.</h6>
                            <form asp-action="CrearUsuario" method="post" class="pt-3">
                                <div class="form-group">
                                    <label for="Nombre">Nombre</label>
                                    <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Nombre" required />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="Email">Correo Electrónico</label>
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Correo Electrónico" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="Password">Contraseña</label>
                                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Contraseña" required />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label for="Telefono">Teléfono</label>
                                    <input asp-for="Telefono" class="form-control form-control-lg" placeholder="Teléfono" required />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>

                                <div class="mt-3 d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg fw-medium auth-form-btn">Registrar</button>
                                </div>

                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success mt-3">
                                        @TempData["SuccessMessage"]
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                                {
                                    <div class="alert alert-danger mt-3">
                                        @ViewData["ErrorMessage"]
                                    </div>
                                }
                            </form>
                            <div class="mb-2 d-grid gap-2 mt-4">
                                <button type="button" class="btn btn-block btn-google auth-form-btn">
                                    <i class="mdi mdi-google me-2"></i>Registrarse con Google
                                </button>
                            </div>
                            <div class="text-center mt-4 fw-light">
                                ¿Ya tienes una cuenta? <a href="@Url.Action("Index", "Home")" class="text-primary">Iniciar sesión</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/template.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/todolist.js"></script>
</body>
</html>
